{
  "monitoring_system": {
    "version": "1.0.0",
    "description": "AI Trading Station Monitoring Configuration"
  },
  "dashboard": {
    "refresh_interval_seconds": 2,
    "dashboard_title": "AI Trading Station Monitor",
    "show_detailed_metrics": true,
    "display_width": 120,
    "max_history_records": 1000
  },
  "system_monitoring": {
    "monitoring_interval_seconds": 0.1,
    "metrics_retention_seconds": 3600,
    "performance_mode": "optimized",
    "enable_latency_monitoring": true,
    "enable_irq_monitoring": true,
    "enable_process_monitoring": true
  },
  "trading_infrastructure": {
    "trading_cores": [2, 3],
    "onload_wrapper_path": "../scripts/onload-trading",
    "expected_performance": {
      "strict_mode_latency_us": 4.37,
      "onload_only_latency_us": 8.5,
      "standard_mode_latency_us": 50.0
    }
  },
  "alert_thresholds": {
    "cpu_usage_percent": 80,
    "memory_usage_percent": 85,
    "latency_threshold_us": 10.0,
    "context_switches_per_sec": 10000,
    "interrupts_per_sec": 50000,
    "isolated_core_usage_percent": 5
  },
  "logging": {
    "log_level": "INFO",
    "log_file": "/tmp/trading_monitor.log",
    "console_logging": false,
    "enable_audit_trail": true
  },
  "export": {
    "output_format": "json",
    "export_interval_seconds": 60,
    "auto_export_enabled": false,
    "export_directory": "/tmp/monitoring_exports"
  },
  "network_monitoring": {
    "monitor_interfaces": ["auto"],
    "latency_check_target": "localhost",
    "bandwidth_monitoring": true,
    "connection_tracking": true
  },
  "integration": {
    "redis_enabled": false,
    "redis_host": "localhost",
    "redis_port": 6379,
    "prometheus_enabled": false,
    "prometheus_port": 9090,
    "webhook_alerts": false,
    "webhook_url": ""
  },
  "aliases": {
    "monitordash": "python3 /home/runner/work/AI-Trading-Station/AI-Trading-Station/monitoring/monitor_dashboard_complete.py",
    "monitorcore": "python3 /home/runner/work/AI-Trading-Station/AI-Trading-Station/monitoring/monitor_trading_system_optimized.py"
  },
  "documentation": {
    "readme_path": "./README.md",
    "architecture_diagram": "./monitoring_architecture.txt",
    "configuration_docs": "All configuration options are documented in README.md"
  }
}