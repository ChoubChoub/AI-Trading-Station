# Redis HFT Performance Gate Thresholds
# Institutional-grade latency gates for trading systems
# All values in microseconds (Î¼s)

# Core Redis Operations (P99 thresholds)
SET_P99_MAX=5
XADD_P99_MAX=6
RTT_P99_MAX=12

# Jitter Thresholds (P99-P50 spread)
SET_JITTER_MAX=4
XADD_JITTER_MAX=5
RTT_JITTER_MAX=8

# Stream Operations (if enabled)
STREAM_LAG_P99_MAX=25
STREAM_JITTER_MAX=10

# Health Thresholds
MAX_CLIENTS=10
MIN_OPS_PER_SEC=1000
MAX_MEMORY_MB=100

# Gate Behavior
SOFT_FAIL_ALLOW=false    # true = allow degraded mode, false = hard fail
BOOTSTRAP_MODE=false     # true = create baseline, false = enforce baseline
BASELINE_FILE="/opt/redis-hft/baselines/fingerprint-baseline.json"

# Reporting
METRICS_OUTPUT="/opt/redis-hft/metrics/redis-metrics.json"
GATE_LOG="/var/log/redis-hft-gate.log"